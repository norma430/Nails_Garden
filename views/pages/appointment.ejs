<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Nail Garden</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../css/appointment.css">
        <script src="https://kit.fontawesome.com/463141b2af.js" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    </head>
    <body>
      <header class="header">
          <nav class="nav">
              <a class="nav__logo-link" href="/">
                  <div class="nav__logo" id="logo">
                      Nail Garden
                  </div>
              </a>
              <div class="nav__burger">
                  <div class="nav__burger--btn"></div>
              </div>
              <ul class="nav__list" id="nav-menu">
                  <li class="nav__item"><a href="/" class="nav__link"><span class="nav__underline">Inicio</span></a></li>
                  <li class="nav__item"><a href="/about-us" class="nav__link"><span class="nav__underline">Conocenos</span></a></li>
                  <li class="nav__item"><a href="/manicure" class="nav__link"><span class="nav__underline">Manicure</span></a></li>
                  <li class="nav__item"><a href="/makeup" class="nav__link"><span class="nav__underline">Maquillaje</span></a></li>
                  <li class="nav__item"><a href="/pedicure" class="nav__link"><span class="nav__underline">Pedicure</span></a></li>
                  <li class="nav__item"><a href="/appointment" class="nav__link nav__link--highlight"><span class="nav__underline nav__underline--active">Agendar cita</span></a></li>
                  <% if(typeof authenticated !== 'undefined'){ %>
                      <li class="nav__item"><a href="/profile" class="nav__link"><span class="nav__underline">Perfil</span></a></li>
                      <li class="nav__item"><a href="/signout" class="nav__link"><span class="nav__underline">Cerrar sesión</span></a></li>
                  <% } else { %>
                      <li class="nav__item"><a href="/signin" class="nav__link"><span class="nav__underline">Iniciar sesión</span></a></li>
                  <% } %>
              </ul>
          </nav>
      </header>
        <main class="main">
            <form class="form" action="/appointment" method="POST">
                <h1 class="form__title">Reservar cita</h1>
                <%- include('../partials/messages'); -%>
                <div class="inputcontainer">
                    <div class="styleinputcontainer">
                        <input class="styleinputcontainer__input styleinputcontainer__input--name" type="text" name="name" placeholder="Nombre completo" value="<%= typeof name != 'undefined' ? name : '' %>">
                        <label class="styleinputcontainer__label" for="name">Nombre completo</label>
                    </div>

                    <div class="styleinputcontainer">
                        <input class="styleinputcontainer__input styleinputcontainer__input--email" type="text" name="contact" placeholder="Correo electrónico o número telefónico" value="<%= typeof email != 'undefined' ? email : '' %>">
                        <label class="styleinputcontainer__label" for="contact">Correo electrónico o número telefónico</label>
                    </div>

                    <div class="timecontainer">
                        <input class="form__date" type="date" id="date" name="date" value="<%= (typeof date != 'undefined') ? (isNaN(date) ? '' : date.toISOString().split('T')[0]) : '' %>">
                        <select class="form__hour" name="hour" id="hour">
                            <option selected label="Seleccionar hora" value="none" selected></option>
                            <% for (let i = 8; i <= 17;  i++ ) { %>
                                <option label="<%= i %>" value="<%= i %>"></option>
                            <% } %>
                        </select>
                    </div>

                    <div class="servicecontainer">
                        <select class="form__service" name="service" id="service">
                            <option selected label="Seleccionar servicio" value="none"></option>
                            <option label="Manicure" value="Manicure"></option>
                            <option label="Pedicure" value="Pedicure"></option>
                            <option label="Maquillaje" value="Makeup"></option>
                        </select>
                    </div>

                    <div class="styleinputcontainer">
                        <textarea class="styleinputcontainer__input styleinputcontainer__input--message" name="description" rows="10" placeholder="Descripción del servicio" cols="40"><%= typeof description != 'undefined' ? description : '' %></textarea>
                        <label class="styleinputcontainer__label styleinputcontainer__label--message" for="description">Descripción del servicio</label>
                    </div>

                    <div class="btncontainer">
                        <button class="btn" type="submit">Reservar cita</button>
                    </div>
            </form>
        </main>
        <footer class="footer">
            <a class="nav__logo-link" href="/">
                <div class="nav__logo" id="logo">
                    Nail Garden
                </div>
            </a>

            <ul class="footer__list">
                <li class="footer__item">
                    <a href="#" class="footer__link">
                        <i class="fab fa-instagram"></i>
                    </a>
                </li>
                <li class="footer__item">
                    <a href="#" class="footer__link">
                        <i class="fab fa-facebook"></i></i>
                    </a>
                </li>
                <li class="footer__item">
                    <a href="#" class="footer__link">
                        <i class="far fa-envelope"></i>
                    </a>
                </li>
            </ul>
        </footer>
        <script src="../javascripts/main.js"></script>
    </body>
</html>
